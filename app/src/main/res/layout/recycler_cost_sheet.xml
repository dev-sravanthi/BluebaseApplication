<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <util.MyCustomTextView_Bold
                android:id="@+id/text_sno"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:text="text_com"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_call"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="MDM Sanitary Pads"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_date"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="WAP018206900350"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_companyname"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:text="5043.040"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_location"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Phone"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_contactno"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:text="657.000"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_followupdate"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Status"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="15dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_department"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Action"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="15dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_employee"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Employee"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="15dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_status"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Status"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="15dp"/>

            <ImageButton
                android:id="@+id/img_eye_view"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#FF909090"
                android:padding="2dip" />
        </TableRow>

    </TableLayout>

</LinearLayout>
